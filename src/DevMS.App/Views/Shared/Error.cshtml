@model ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

@if(Model == null)
{
    <div>
        <h2>Oops! Ocorreu um erro, mas não se preocupe, nosso time de desenvolvedores será avisado e corrigiremos em breve!</h2>
    </div>
}
else
{
    <h1>@Html.Raw(Model.Titulo)</h1>
    <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
}